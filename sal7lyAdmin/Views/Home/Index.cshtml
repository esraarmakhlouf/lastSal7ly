            <div class="col-lg-6">
                <div class="card">
                    <div class="card-header border-0">
                        <div class="d-flex justify-content-between">
                            <h3 class="card-title">الخدمات</h3>
                            <div class="card-tools">
                                <a  href="javascript:;" onclick="downloadPDF2('visitors-chart')" class="btn btn-tool btn-sm">
                                    <i class="fas fa-download"></i>
                                </a>

                            </div>
                        </div>
                    </div>
                    <div class="card-body">

                        <!-- /.d-flex -->

                        <div class="position-relative mb-4">
                            <canvas id="visitors-chart" height="200"></canvas>
                        </div>

                        <div class="d-flex flex-row justify-content-end">
                            <span class="mr-2">
                                <i class="fas fa-square text-primary"></i> هذا الاسبوع
                            </span>

                            <span>
                                <i class="fas fa-square text-gray"></i> الاسبوع الماضي
                            </span>
                        </div>
                    </div>
                </div>
                <!-- /.card -->

                <div class="card">
                    <div class="card-header border-0">
                        <h3 class="card-title">قطع الغيار</h3>
                        <div class="card-tools">
                            <a href="/Order/Index">عرض التقارير</a>

                        </div>
                    </div>
                    <div class="card-body table-responsive p-0">
                        <table class="table table-striped table-valign-middle">
                            <thead>
                                <tr>
                                    <th>قطعة الغيار</th>
                                    <th>السعر</th>
                                    <th>المبيعات </th>
                                    <th>المزيد</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.ItemsVM)
                                {

                                    <tr>
                                        <td>
                                            <img src="/@AppSession.ItemsUploads/@item.ImagePath" alt="Product 1" class="img-circle img-size-32 mr-2">
                                            @item.ArabicName
                                        </td>
                                        <td>$@item.Price </td>
                                        <td>
                                            @if (item.Sales > 5000)
                                            {
                                                <small class="text-success mr-1">
                                                    <i class="fas fa-arrow-up"></i>
                                                    @item.Sales
                                                </small>
                                            }
                                            else
                                            {
                                                <small class="text-warning mr-1">
                                                    <i class="fas fa-arrow-down"></i>
                                                    @item.Sales
                                                </small>
                                            }
                                        </td>
                                        <td>
                                            <a href="/Orders/Index" class="text-muted">
                                                <i class="fas fa-search"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col-md-6 -->
            <div class="col-lg-6">
                <div class="card">
                    <div class="card-header border-0">
                        <div class="d-flex justify-content-between">
                            <h3 class="card-title">المبيعات</h3>
                            <div class="card-tools">
                                <a href="javascript:;" onclick="downloadPDF2('sales-chart')" class="btn btn-tool btn-sm">
                                    <i class="fas fa-download"></i>
                                </a>

                            </div>

                        </div>
                    </div>
                    <div class="card-body">

                        <!-- /.d-flex -->

                        <div class="position-relative mb-4">
                            <canvas id="sales-chart" height="200"></canvas>
                        </div>

                        <div class="d-flex flex-row justify-content-end">
                            <span class="mr-2">
                                <i class="fas fa-square text-primary"></i> هذا الاسبوع
                            </span>

                            <span>
                                <i class="fas fa-square text-gray"></i> الاسبوع الماضي
                            </span>
                        </div>
                    </div>
                </div>
                <!-- /.card -->
                <!-- PIE CHART -->
                <div class="card">
                    <div class="card-header border-0">
                        <h3 class="card-title">الخدمات</h3>
                        <a href="/ServicesReport/Index">عرض التقارير</a>

                    </div>
                    <div class="card-body table-responsive p-0">
                        <table class="table table-striped table-valign-middle">
                            <thead>
                                <tr>
                                    <th>الخدمة</th>
                                    @*<th>السعر</th>*@
                                    <th>المبيعات </th>
                                    <th>المزيد</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.ServeicesVM)
                                {

                                    <tr>
                                        <td>
                                            @*<img src="/img/@item.ImagePath" alt="Product 1" class="img-circle img-size-32 mr-2">*@
                                            @item.ArabicName
                                        </td>
                                        @*<td>$@item.Price </td>*@
                                        <td>
                                            @if (item.Sales > 5000)
                                            {
                                                <small class="text-success mr-1">
                                                    <i class="fas fa-arrow-up"></i>
                                                    @item.Sales
                                                </small>
                                            }
                                            else
                                            {
                                                <small class="text-warning mr-1">
                                                    <i class="fas fa-arrow-down"></i>
                                                    @item.Sales
                                                </small>
                                            }
                                        </td>
                                        <td>
                                            <a href="/ServicesReport/Index" class="text-muted">
                                                <i class="fas fa-search"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <!-- /.card -->
                <!-- PIE CHART -->
                <div class="card card">
                    <div class="card-header">
                        <h3 class="card-title">المدن</h3>

                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                            <button type="button" class="btn btn-tool" data-card-widget="remove"><i class="fas fa-times"></i></button>
                        </div>
                    </div>
                    <div class="card-body">
                        <canvas id="pieChart" style="min-height: 250px; height: 250px; max-height: 250px; max-width: 100%;"></canvas>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col-md-6 -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</div>
