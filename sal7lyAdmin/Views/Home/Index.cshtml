<script>
    function initialize() {

        var myOptions = {
            zoom: 8,
            center: new google.maps.LatLng(27.1777769, 31.1945033),
            mapTypeId: google.maps.MapTypeId.ROADMAP
        }

        var map = new google.maps.Map(document.getElementById("map"), myOptions);
        
        @foreach (var item in Model.TechnicalsVM)
            {


            <text>
