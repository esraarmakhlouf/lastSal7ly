@model CustomerReview
@{
    Layout = null;
    ViewBag.Title = " اراء العملاء";
}
<style>
    .file-upload-image{
        width:250px;
        height:250px;
    }
</style>
    <form data-ajax="true" data-ajax-mode="replace" asp-action="SaveCustomerReviewImage" asp-controller="CustomerReview" method="post" enctype="multipart/form-data" id="CustomerReviewForm" name="CustomerReviewForm">

        @if (Model.Id != default(long))
        {<input asp-for="Id" type="hidden" />}
        <input asp-for="ImagePath" type="hidden" />
        <div class="row">
        <div class="col">
            <div class="form-group">
                <div class="file-upload">
                    <div class="image-upload-wrap">
                        <input id="Image" class="file-upload-input" type='file' onchange="readURL(this);" accept="image/*" />
                        <div class="drag-text">
                            <h3>اسحب وأفلت أو حدد إضافة صورة</h3>
                        </div>
                    </div>
                    <div class="file-upload-content">
                        <img class="file-upload-image" src="@(string.IsNullOrEmpty(Model.ImagePath) ? "#" :("/"+AppSession.CustomerReviewUploads+"/"+Model.ImagePath))" alt="your image" />
                        <div class="image-title-wrap">
                            <button type="button" onclick="DeleteCustomerReviewImage('@Model.Id')" class="btn btn-outline-danger">
                                <i class="far fa-trash-alt"></i>
                                حذف
                            </button>
                        </div>
                    </div>
                </div>
                <span class="text-danger img-reuired" style="display:none;">مطلوبة</span>
            </div>
        </div>
        </div>

    </form>


        <script src="~/js/Dev/CustomerReview/OpenForm.js"></script>
        <partial name="_ValidationScriptsPartial" />
