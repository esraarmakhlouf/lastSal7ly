@model HashSet<District>
@{
    Layout = null;
}

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>الاسم العربي</th>
            <th>الاسم الانجليزي</th>
            <th>
                <button type="button" class="btn btn-outline-warning" onclick="AddDistrict()">
                    <i class="fas fa-plus"></i>
                </button>
            </th>
        </tr>
    </thead>
    <tbody class="districtsTB">
        @foreach (var district in Model)
        {
            <tr data-id="@district.Id">
                <td>
                    <input type="text" name="DistrictArabicName" class="form-control" value="@district.ArabicName" placeholder="الاسم العربي")" />
                </td>
                <td>
                    <input type="text" name="DistrictEnglishName" class="form-control" value="@district.EnglishName" placeholder="الاسم الانجليزي")" />
                </td>
                <td>
                    <button type="button" class="btn btn-outline-danger" onclick="DeleteDistrict(this)">
                        <i class="fas fa-trash-alt"></i>
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

