@model HashSet<Service>
@{
    ViewBag.Title = "الخدمات";
}


<!--Section: services -->
    <section class="text-center ">
        <div class="row sectionheader">
            <dv class="section-header-title">
                <p>خدماتنا</p>
            </dv>

        </div>
        <div class="card">
            <div class="card-body">
                <!--Grid row-->
                <div class="row wow fadeIn product_list_grid">
                    @foreach (var service in Model)
                    {

                        <!--Grid column-->
                        <div class="col-lg-4 col-md-6 mb-4">
                            <!--Card-->
                            <div class="card">
                                <div class="card-body view overlay">
                                    <!--Card image-->
                                    @*@if (service.Image != null && service.Image != "")
                                    {*@
                                        <img src="~/@AppSession.ServicesUploads/@service.ImagePath"  width="100%" height="200" />
                                   @* }*@

                                    <!--Card image-->
                                </div>
                                <!--Card content-->
                                <div class="card-footer">
                                    <p class="blue-text">
                                        @service.ArabicName
                                    </p>
                                </div>
                                <!--Card content-->
                            </div>
                            <!--Card-->
                        </div>
                        <!--Grid column-->
                    }


                </div>
                <!--Grid row-->
            </div>
        </div>
    </section>
<!--Section: services -->
<script src="~/js/e-commerceJs/main.js"></script>
